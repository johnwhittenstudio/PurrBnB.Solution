@{
  Layout = "_Layout";
  ViewData["Title"] = "Edit Dwelling";
}

@model PurrBnB.Models.Dwelling

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h1>Edit</h1>
        <h4>Edit this listed dwelling: @Html.DisplayFor(model => model.DwellingType)</h4>
      </div>
      <div class="card-body"></div>
        @using (Html.BeginForm())
        {
          @Html.HiddenFor(model => model.DwellingId)
          @Html.LabelFor(model => model.DwellingName)
          @Html.TextBoxFor(model => model.DwellingName, new {@required = "required"})
          @Html.LabelFor(model => model.DwellingOwnerName)
          @Html.TextBoxFor(model => model.DwellingOwnerName, new {@required = "required"})
          @Html.LabelFor(model => model.DwellingType)
          @Html.TextBoxFor(model => model.DwellingType, new {@required = "required"})
          @Html.LabelFor(model => model.DwellingType)
          @Html.TextBoxFor(model => model.DwellingType, new {@required = "required"})
          @Html.LabelFor(model => model.GroundLevelAccess)
          @Html.CheckBoxFor(model => model.GroundLevelAccess, new {@required = "required"})
          @Html.LabelFor(model => model.Kitchen)
          @Html.CheckBoxFor(model => model.Kitchen, new {@required = "required"})
          @Html.LabelFor(model => model.NumberOfPeopleAllowed)
          @Html.TextBoxFor(model => model.NumberOfPeopleAllowed, new {@required = "required"})
          @Html.LabelFor(model => model.Bedrooms)
          @Html.TextBoxFor(model => model.Bedrooms, new {@required = "required"})
          @Html.LabelFor(model => model.Bathrooms)
          @Html.TextBoxFor(model => model.Bathrooms, new {@required = "required"})
          @Html.LabelFor(model => model.PrivateAccess)
          @Html.CheckBoxFor(model => model.PrivateAccess, new {@required = "required"})
          @Html.LabelFor(model => model.Accomodations)
          @Html.TextBoxFor(model => model.Accomodations, new {@required = "required"})
          @* <!-- @Html.LabelFor(model => model.StartDate)
          @Html.TextBoxFor(model => model.StartDate, new { @type = "date"})
          @Html.LabelFor(model => model.EndDate)
          @Html.TextBoxFor(model => model.EndDate, new { @type = "date"}) --> *@
          @Html.LabelFor(model => model.CostPerNight)
          @Html.TextBoxFor(model => model.CostPerNight, new {@format = "{0:C0}"})
          @Html.Label("Select pet")
          @Html.DropDownList("PetId")
          <input id="button" class="btn btn-outline" type="submit" value="Save"/>
        }
    </div>
      <button class="btn btn-outline">@Html.ActionLink("Back to list", "Index")</button>
  </div>
</div>



