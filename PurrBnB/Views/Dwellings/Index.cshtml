@{
  Layout = "_Layout";
}

@using PurrBnB.Models;
@model IEnumerable<PurrBnB.Models.Dwelling>
<div class="container">
  <br>
  <br>
  <div class="col-md-12">
    <div class=row>
      &nbsp;
      &nbsp;
      &nbsp;
      &nbsp;
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
          <center><strong><h1 id="title" style="font-size:4vw">List of available dwellings</h1></strong></center>
        </div>
        &nbsp;
        @if (Model.Any())
        {
          <center>
            @foreach (Dwelling dwelling in Model)
            {
              <h3>@Html.ActionLink($"{dwelling.DwellingName}", "Details", new { id = dwelling.DwellingId })</h3>
            }
          </center>
        } 
        else
        {
          <center><h3>No dwellings have been listed yet!</h3></center>
        }
        &nbsp;
        &nbsp;
        <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0"style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("List new dwelling", "Create")</button>
        &nbsp;
        <button id="button" type="button" class="btn btn-outline-dark my-sm-0"style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Home", "Index", "Home")</button></center>
        &nbsp;
        &nbsp;
      </div>
    </div>
  </div>
</div>