@{
  Layout = "_Layout";
  ViewData["Title"] = "Reservations";
}

@using PurrBnB.Models;
@model IEnumerable<PurrBnB.Models.Reservation>

<div class="row">
  <div class="col-md-12">
    <div id="card" class="card border-dark">
      <div class="card-header">
        <h1 class="text-center">Reservations</h1>
      </div>
      <div class="card-body">
        @if (@Model.Count() == 0)
        {
          <h3 class="text-center">No reservations have been added yet!</h3>
        }
        @foreach (Reservation reservation in Model)
        {
          <h3 class="text-center">@Html.ActionLink($"{reservation.ReservationName}", "Details", new { id = reservation.ReservationId, @class = "text-center" })</h3>
        }
        <div class="row">
          <div class="col-md-12 text-center">
            <button class="btn btn-outline-dark">@Html.ActionLink("Add new reservation", "Create")</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
