@{
  Layout = "_Layout";
  ViewData["Title"] = "Reservations";
}

@using PurrBnB.Models;
@model IEnumerable<PurrBnB.Models.Reservation>

<div class="row">
  <div class="col-md-12">
    <div id="card" class="card border-dark">
      <div class="card-header">
        <h1 class="text-center">Reservations</h1>
      </div>

        <div class="card-body">
        <center><button class="btn btn-outline-dark">@Html.ActionLink("Add new reservation", "Create")</button></center> &nbsp;

        <div class="flex-container">
        @if (@Model.Count() == 0)
        {
          <h3 class="text-center">No reservations have been added yet!</h3>
        }
        @foreach (Reservation reservation in Model)
        {
          <div class="col-md-5">
            <div id="card" class="card border-primary">
              <div class="card-header">
                <div>
                  <img src="~/img/reservation.png" alt="" width="80" class="d-inline-block align-text-middle"><h3>@Html.ActionLink($"{reservation.ReservationName}", "Details", new { id = reservation.ReservationId})</h3>
                  <h6>@Html.DisplayFor(model => reservation.TotalNights) total nights</h6>
                </div>
              </div>
            </div>
          </div>
        }
        </div>
        &nbsp;
        <div class="row">
          <div class="col-md-12 text-center">
          <button class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
      </div>
    </div>
  </div>
</div>
