@using System.Security.Claims

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/Pets">
      <img src="~/img/purrBnBLogo.svg" alt="" width="35" height="32" class="d-inline-block align-text-middle">
    </a>
    <h2 class="brandName">PurrBnB</h2>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link"})
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link">
            @Html.ActionLink("Dwelling", "Index", "Dwellings", null, new { @class = "nav-link"})
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link">
            @Html.ActionLink("Reservation", "Index", "Reservations", null, new { @class = "nav-link"})
          </a>
        </li>
      </ul>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
      <span class="welcomeMessage">Hello @User.Identity.Name!  </span>
      @using (Html.BeginForm("LogOff", "Account"))
      {
        <input type="submit" class="btn btn-outline-danger" value="Log out" />
      }
    }
    else
    {
      <button class="btn btn-outline-primary" aria-current="page">
        @Html.ActionLink("Login", "Login", "Account")
      </button>
    }
  </div>
</nav>